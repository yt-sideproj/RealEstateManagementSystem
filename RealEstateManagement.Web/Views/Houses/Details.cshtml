@using System.Security.Claims
@model RealEstateManagement.Core.Models.House

@{
    ViewData["Title"] = "房源詳情";
    var currentAgentId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    bool isOwner = currentAgentId != null && Model.AgentId.ToString() == currentAgentId;
}

<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center bg-info text-white">
                <h6 class="m-0 font-weight-bold"><i class="fas fa-info-circle me-1"></i> 房源詳細資料</h6>
                <a asp-action="Index" class="btn btn-light btn-sm text-info fw-bold"><i class="fas fa-arrow-left me-1"></i> 返回列表</a>
            </div>

            <div class="bg-dark text-center p-0 position-relative" style="min-height: 300px;">
                <img src="/house_images/@(Model.Id).jpg?v=@DateTime.Now.Ticks"
                     class="img-fluid"
                     style="max-height: 500px; width: 100%; object-fit: cover; opacity: 0.9;"
                     onerror="this.src='https://placehold.co/800x400?text=No+Image+Available'; this.style.objectFit='contain';" />

                @if (Model.IsActive)
                {
                    <span class="position-absolute top-0 end-0 m-3 badge bg-success fs-6 shadow">上架中</span>
                }
                else
                {
                    <span class="position-absolute top-0 end-0 m-3 badge bg-secondary fs-6 shadow">已下架</span>
                }
            </div>

            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-4 border-bottom pb-3">
                    <div>
                        <h3 class="font-weight-bold text-dark mb-1">@Model.Title</h3>
                        <p class="text-muted mb-0"><i class="fas fa-map-marker-alt me-1 text-danger"></i> @Model.FullAddress</p>
                    </div>
                    <div class="text-end">
                        <h2 class="text-primary font-weight-bold mb-0">@Model.Price.ToString("N0") <span class="fs-5 text-muted">萬</span></h2>
                        <small class="text-muted">單價 @((Model.Price / Model.SquareMeters).ToString("N1")) 萬/坪</small>
                    </div>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-4">
                        <div class="p-3 border rounded bg-light text-center h-100">
                            <small class="text-uppercase text-muted fw-bold">坪數空間</small>
                            <div class="fs-3 fw-bold text-dark mt-1">@Model.SquareMeters <span class="fs-6 text-muted">坪</span></div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 border rounded bg-light text-center h-100">
                            <small class="text-uppercase text-muted fw-bold">所在區域</small>
                            <div class="fs-3 fw-bold text-dark mt-1">@Model.City <span class="fs-6 text-muted">@Model.District</span></div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 border rounded bg-light text-center h-100">
                            <small class="text-uppercase text-muted fw-bold">負責房仲</small>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2 shadow-sm" style="width: 40px; height: 40px; font-size: 1.2rem;">
                                    @(Model.Agent?.Name?.Substring(0, 1) ?? "?")
                                </div>
                                <span class="fw-bold text-dark fs-5">@(Model.Agent?.Name ?? "未知")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <h6 class="text-secondary text-uppercase small font-weight-bold mb-3"><i class="fas fa-align-left me-1"></i> 物件描述</h6>
                <div class="p-4 bg-light rounded border mb-4">
                    @if (string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <span class="text-muted fst-italic">暫無描述</span>
                    }
                    else
                    {
                        <p class="mb-0" style="white-space: pre-line; line-height: 1.8;">@Model.Description</p>
                    }
                </div>

                <div class="d-flex justify-content-end">
                    @if (isOwner)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white me-2 shadow-sm px-4">
                            <i class="fas fa-edit me-1"></i> 編輯資料
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger shadow-sm px-4">
                            <i class="fas fa-trash-alt me-1"></i> 刪除
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>