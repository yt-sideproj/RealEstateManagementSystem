@using System.Security.Claims
@model RealEstateManagement.Core.Models.House

@{
    ViewData["Title"] = "房源詳情";
    var currentAgentId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    bool isOwner = currentAgentId != null && Model.AgentId.ToString() == currentAgentId;
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-info-circle me-1"></i> 房源詳細資料</h6>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left me-1"></i> 返回列表</a>
            </div>
            <div class="card-body">
                
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h4 class="font-weight-bold text-dark">@Model.Title</h4>
                        <p class="text-muted mb-0"><i class="fas fa-map-marker-alt me-1"></i> @Model.FullAddress</p>
                    </div>
                    <div class="text-end">
                        <h3 class="text-primary font-weight-bold mb-0">@Model.Price.ToString("N0") <small class="text-muted fs-6">萬元</small></h3>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success mt-2">上架中</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary mt-2">已下架</span>
                        }
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light h-100">
                            <small class="text-uppercase text-muted fw-bold">坪數空間</small>
                            <div class="fs-4 fw-bold text-dark mt-1">@Model.SquareMeters <small class="fs-6 text-muted">坪</small></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light h-100">
                            <small class="text-uppercase text-muted fw-bold">負責房仲</small>
                            <div class="d-flex align-items-center mt-1">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 30px; height: 30px;">
                                    @(Model.Agent?.Name?.Substring(0,1) ?? "?")
                                </div>
                                <span class="fw-bold text-dark">@(Model.Agent?.Name ?? "未知")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <h6 class="text-secondary text-uppercase small font-weight-bold mb-3">物件描述</h6>
                <div class="p-3 bg-light rounded border">
                    @if(string.IsNullOrWhiteSpace(Model.Description)) {
                        <span class="text-muted fst-italic">暫無描述</span>
                    } else {
                        <p class="mb-0" style="white-space: pre-line;">@Model.Description</p>
                    }
                </div>

                <div class="d-flex justify-content-end mt-4">
                    @if (isOwner)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white me-2 shadow-sm">
                            <i class="fas fa-edit me-1"></i> 編輯資料
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>