@using System.Security.Claims
@model IEnumerable<RealEstateManagement.Core.Models.House>

@{
    ViewData["Title"] = "房源列表";
    // 取得當前登入者的 ID
    var currentAgentId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>房源列表</h2>
    <a asp-action="Create" class="btn btn-primary">新增房源</a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>標題</th>
            <th>區域</th>
            <th>總價 (萬)</th>
            <th>狀態</th>
            <th>負責人</th> <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.City @item.District</td>
                <td>@item.Price.ToString("N0")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">上架中</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">已下架</span>
                    }
                </td>
                <td>
                    @(item.Agent?.Name ?? "未知")
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">詳情</a> 

                    @if (currentAgentId != null && item.AgentId.ToString() == currentAgentId)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">編輯</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">刪除</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
