@model RealEstateManagement.Web.Models.HouseViewModel

@{
    ViewData["Title"] = "編輯房源";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow mb-4 border-start-warning border-5">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-warning"><i class="fas fa-edit me-1"></i> 編輯房源資料</h6>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left me-1"></i> 返回列表</a>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="AgentId" />
                    <input type="hidden" asp-for="CreatedAt" />

                    <div class="mb-4 text-center p-3 bg-light rounded border">
                        <div class="mb-2 position-relative d-inline-block">
                            <span class="badge bg-secondary position-absolute top-0 start-0 m-2">目前照片</span>
                            <img id="imagePreview"
                                 src="/house_images/@(Model.Id).jpg?v=@DateTime.Now.Ticks"
                                 class="img-fluid rounded border shadow-sm bg-white"
                                 style="max-height: 300px; object-fit: cover;"
                                 onerror="this.src='https://placehold.co/600x400?text=No+Image'" />
                        </div>
                        <div class="mt-2">
                            <label asp-for="ImageFile" class="form-label fw-bold text-primary"><i class="fas fa-camera me-1"></i> 更換照片</label>
                            <input asp-for="ImageFile" class="form-control w-75 mx-auto" type="file" accept="image/*" onchange="previewImage(this)" />
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="alert alert-light border mb-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="form-check form-switch ps-0">
                                <div class="d-flex align-items-center">
                                    <input class="form-check-input ms-0 mt-0" type="checkbox" role="switch" asp-for="IsActive" style="width: 3rem; height: 1.5rem;">
                                    <label class="form-check-label fw-bold ms-3" asp-for="IsActive" style="font-size: 1.1rem;">
                                        上架狀態
                                        <span class="text-muted small fw-normal ms-1">(開啟代表上架中)</span>
                                    </label>
                                </div>
                            </div>
                            <div class="text-muted small d-none d-sm-block">
                                <i class="fas fa-info-circle me-1"></i> 關閉此開關將隱藏房源
                            </div>
                        </div>
                    </div>

                    <h6 class="text-secondary text-uppercase small font-weight-bold mb-3 border-bottom pb-2">基本資訊</h6>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Title" class="form-label fw-bold">房源標題</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-bold">總價 (萬元)</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" class="form-control" type="number" min="0" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SquareMeters" class="form-label fw-bold">坪數</label>
                            <div class="input-group">
                                <input asp-for="SquareMeters" class="form-control" type="number" min="0" />
                                <span class="input-group-text">坪</span>
                            </div>
                            <span asp-validation-for="SquareMeters" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-secondary text-uppercase small font-weight-bold mb-3 mt-4 border-bottom pb-2">地點資訊</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label fw-bold">縣市</label>
                            <select asp-for="City" class="form-select">
                                <option value="台北市">台北市</option>
                                <option value="新北市">新北市</option>
                                <option value="桃園市">桃園市</option>
                                <option value="台中市">台中市</option>
                                <option value="台南市">台南市</option>
                                <option value="高雄市">高雄市</option>
                            </select>
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="District" class="form-label fw-bold">行政區</label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger small"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="DetailAddress" class="form-label fw-bold">詳細地址</label>
                            <input asp-for="DetailAddress" class="form-control" />
                            <span asp-validation-for="DetailAddress" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-secondary text-uppercase small font-weight-bold mb-3 mt-4 border-bottom pb-2">詳細描述</h6>
                    <div class="mb-3">
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-light me-md-2">取消</a>
                        <button type="submit" class="btn btn-warning text-white px-4 shadow-sm"><i class="fas fa-save me-1"></i> 更新資料</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}