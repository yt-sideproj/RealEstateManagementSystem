@model RealEstateManagement.Web.Models.HouseViewModel

@{
    ViewData["Title"] = "新增房源";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center bg-primary text-white">
                <h6 class="m-0 font-weight-bold"><i class="fas fa-plus-circle me-1"></i> 新增房源資料</h6>
                <a asp-action="Index" class="btn btn-light btn-sm text-primary fw-bold"><i class="fas fa-arrow-left me-1"></i> 返回列表</a>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                    <div class="mb-4 text-center">
                        <div class="mb-2">
                            <img id="imagePreview" src="https://placehold.co/600x400?text=Image+Preview"
                                 class="img-fluid rounded border shadow-sm"
                                 style="max-height: 300px; object-fit: cover;" />
                        </div>
                        <div class="d-inline-block">
                            <label asp-for="ImageFile" class="form-label fw-bold text-primary">上傳房源封面照</label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" onchange="previewImage(this)" />
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-secondary text-uppercase small font-weight-bold mb-3 border-bottom pb-2">基本資訊</h6>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Title" class="form-label fw-bold">房源標題</label>
                            <input asp-for="Title" class="form-control" placeholder="例如：大安森林公園景觀豪宅" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-bold">總價 (萬元)</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" class="form-control" type="number" min="0" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SquareMeters" class="form-label fw-bold">坪數</label>
                            <div class="input-group">
                                <input asp-for="SquareMeters" class="form-control" type="number" min="0" />
                                <span class="input-group-text">坪</span>
                            </div>
                            <span asp-validation-for="SquareMeters" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-secondary text-uppercase small font-weight-bold mb-3 mt-4 border-bottom pb-2">地點資訊</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label fw-bold">縣市</label>
                            <select asp-for="City" class="form-select">
                                <option value="">請選擇縣市...</option>
                                <option value="台北市">台北市</option>
                                <option value="新北市">新北市</option>
                                <option value="桃園市">桃園市</option>
                                <option value="台中市">台中市</option>
                                <option value="台南市">台南市</option>
                                <option value="高雄市">高雄市</option>
                            </select>
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="District" class="form-label fw-bold">行政區</label>
                            <input asp-for="District" class="form-control" placeholder="例如：大安區" />
                            <span asp-validation-for="District" class="text-danger small"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="DetailAddress" class="form-label fw-bold">詳細地址</label>
                            <input asp-for="DetailAddress" class="form-control" placeholder="路/街/巷/弄/號" />
                            <span asp-validation-for="DetailAddress" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-secondary text-uppercase small font-weight-bold mb-3 mt-4 border-bottom pb-2">詳細描述</h6>
                    <div class="mb-3">
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="請輸入屋況特色、周邊機能等描述..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-light me-md-2">取消</a>
                        <button type="submit" class="btn btn-primary px-4 shadow-sm"><i class="fas fa-save me-1"></i> 儲存房源</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}