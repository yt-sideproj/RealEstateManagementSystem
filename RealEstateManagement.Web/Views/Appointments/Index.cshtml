@using RealEstateManagement.Core.Enums
@model IEnumerable<RealEstateManagement.Core.Models.Appointment>

@{
    ViewData["Title"] = "我的預約管理";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">預約管理看板</h1>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info shadow-sm">
        <i class="fas fa-info-circle me-2"></i> 目前沒有與您房源相關的預約紀錄。
    </div>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
             <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-tasks me-2"></i>預約申請列表</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>預約時間</th>
                            <th>房源名稱</th>
                            <th>客戶資訊</th>
                            <th>目前狀態</th>
                            <th class="text-center">管理操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark">@item.VisitDate.ToString("yyyy/MM/dd")</span>
                                        <span class="text-muted small"><i class="far fa-clock me-1"></i>@item.VisitDate.ToString("HH:mm")</span>
                                    </div>
                                </td>
                                <td>
                                    <a href="/Houses/Details/@item.HouseId" class="text-decoration-none fw-bold text-primary">
                                        <i class="fas fa-home me-1"></i> @item.House?.Title
                                    </a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.Customer?.Name</div>
                                            <div class="text-muted small"><i class="fas fa-phone-alt me-1"></i>@item.Customer?.Phone</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case AppointmentStatus.Pending:
                                            <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half me-1"></i>待確認</span>
                                            break;
                                        case AppointmentStatus.Confirmed:
                                            <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>已確認</span>
                                            break;
                                        case AppointmentStatus.Cancelled:
                                            <span class="badge bg-secondary"><i class="fas fa-ban me-1"></i>已取消</span>
                                            break;
                                        case AppointmentStatus.Completed:
                                            <span class="badge bg-info text-dark"><i class="fas fa-flag-checkered me-1"></i>已完成</span>
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.Status == AppointmentStatus.Pending)
                                    {
                                        <form asp-action="Confirm" asp-route-id="@item.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-success btn-sm btn-icon-split shadow-sm">
                                                <span class="icon text-white-50"><i class="fas fa-check"></i></span>
                                                <span class="text">接受</span>
                                            </button>
                                        </form>
                                        <form asp-action="Cancel" asp-route-id="@item.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm btn-icon-split shadow-sm">
                                                <span class="icon text-white-50"><i class="fas fa-times"></i></span>
                                                <span class="text">拒絕</span>
                                            </button>
                                        </form>
                                    }
                                    else if (item.Status == AppointmentStatus.Confirmed)
                                    {
                                         <form asp-action="Complete" asp-route-id="@item.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-primary btn-sm shadow-sm">
                                                <i class="fas fa-check-double me-1"></i> 完成
                                            </button>
                                        </form>
                                        <form asp-action="Cancel" asp-route-id="@item.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-times me-1"></i> 取消
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">--</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}